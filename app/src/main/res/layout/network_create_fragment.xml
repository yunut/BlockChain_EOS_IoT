<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="네트워크 생성"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="＊ 스마트홈을 구성하기위한 네트워크를 생성합니다."
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="＊ 영문 a~z과 숫자 1~5로 구성된 이름을 생성하세요."
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="＊ 네트워크 이름은 계정으로 취급되기에, 사용자 계정과 같거나, 다른 계정과 중복된 이름을 가질수 없습니다."/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_create_network_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/create_network_text"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="생성할 네트워크 이름을 입력해주세요." />
    </android.support.design.widget.TextInputLayout>

    <Button android:id="@+id/btn_networkCreate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="생성"
        android:background="@color/bgcreateAccount"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>
    <Button android:id="@+id/btn_networkcancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:background="@color/colorPrimary"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"/>
</LinearLayout>

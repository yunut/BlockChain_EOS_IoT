<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".Create_Account_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="계정 추가하기"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="＊ 블록체인 네트워크에 다른 계정을 참여시킵니다."
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="＊ 참여 시킬 계정이름을 입력해 주세요."
        android:layout_marginBottom="5dp"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_join_account_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/join_account_EditText"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="계정이름을 입력해주세요." />
    </android.support.design.widget.TextInputLayout>

    <Button android:id="@+id/btn_join"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="계정 참가"
        android:background="@color/bgcreateAccount"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>
    <Button android:id="@+id/btn_non_join"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:background="@color/colorPrimary"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"/>
</LinearLayout>
